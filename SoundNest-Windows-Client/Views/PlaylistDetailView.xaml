<UserControl x:Class="SoundNest_Windows_Client.Views.PlaylistDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundyColor1}"
             xmlns:local="clr-namespace:SoundNest_Windows_Client.Views"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" 
             d:DesignWidth="800">

    <Viewbox Stretch="Uniform">
        <Canvas Width="1920" 
                Height="1080">
            <TextBlock FontSize="66"
                       FontWeight="Bold"
                       Foreground="{StaticResource ForegroundWhiteColor}"
                       Canvas.Left="432" 
                       Canvas.Top="117">
                <Run Text="Playlist -> "/>
                <Run Text="{Binding PlaylistName}"/>
            </TextBlock>

            <Button Content="Editar playlist"
                FontSize="20"
                FontWeight="Bold"
                Style="{StaticResource PrimaryButtonStyle}"
                Command="{Binding EditPlaylistCommand}"
                Canvas.Left="1334" 
                Canvas.Top="122"
                Width="261" 
                Height="78" HorizontalAlignment="Left" VerticalAlignment="Top"/>

            <Button Content="Elliminar playlist"
                FontSize="20"
                FontWeight="Bold"
                Style="{StaticResource NegativeButtonStyle}"
                Command="{Binding DeletePlaylistCommand}"
                Canvas.Left="1623" 
                Canvas.Top="123"
                Width="243" 
                Height="76"/>

            <ScrollViewer Height="615"
                          Width="1427"
                          Canvas.Left="349" 
                          Canvas.Top="263"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">

                <ItemsControl ItemsSource="{Binding Songs}"
                              Width="1427">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="10"
                                    Padding="10"
                                    Background="#222"
                                    CornerRadius="8">
                                <Border.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Eliminar canción"
                                                  Command="{Binding DataContext.RemoveSongCommand,
                                                                    RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}" />
                                    </ContextMenu>
                                </Border.ContextMenu>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Image Grid.Column="0"
                                           Width="60" Height="60"
                                           Margin="0,0,10,0"
                                           Source="{Binding PathImageUrl}" />

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding SongName}"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   />
                                        <TextBlock Text="{Binding UserName}"
                                                   FontSize="16"
                                                   Foreground="LightGray"
                                                   Margin="0,5,0,0"/>
                                    </StackPanel>

                                    <Button Grid.Column="2"
                                            Content="▶"
                                            Width="40" Height="40"
                                            Command="{Binding DataContext.PlaySongCommand,
                                                              RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            FontSize="24"
                                            Foreground="White"
                                            Cursor="Hand"
                                            VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Canvas>
    </Viewbox>
</UserControl>
