<UserControl x:Class="SoundNest_Windows_Client.Views.PlaylistDetailView"
             x:Name="RootControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:SoundNest_Windows_Client.Resources.Converters"
             mc:Ignorable="d"
             Background="{StaticResource BackgroundyColor1}"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <UserControl.Resources>
        <conv:PlaylistImageConverter x:Key="PlaylistImageConverter" />
    </UserControl.Resources>

    <Viewbox Stretch="Uniform">
        <Canvas Width="1920" Height="1080">

            <TextBlock FontSize="66"
                       FontWeight="Bold"
                       Foreground="{StaticResource ForegroundWhiteColor}"
                       Canvas.Left="432"
                       Canvas.Top="117">
                <Run Text="Playlist -> "/>
                <Run Text="{Binding PlaylistName}"/>
            </TextBlock>

            <Button Content="Editar playlist"
                    FontSize="20"
                    FontWeight="Bold"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Command="{Binding EditPlaylistCommand}"
                    Canvas.Left="1334"
                    Canvas.Top="122"
                    Width="261"
                    Height="78"/>

            <Button Content="Eliminar playlist"
                    FontSize="20"
                    FontWeight="Bold"
                    Style="{StaticResource NegativeButtonStyle}"
                    Command="{Binding DeletePlaylistCommand}"
                    Canvas.Left="1623"
                    Canvas.Top="123"
                    Width="243"
                    Height="76"/>

            <ScrollViewer Height="615"
                          Width="1427"
                          Canvas.Left="349"
                          Canvas.Top="263"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding Songs}" Width="1427">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="10"
                                    Padding="10"
                                    Background="#222"
                                    CornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Image Grid.Column="0"
                                           Width="60"
                                           Height="60"
                                           Margin="0,0,10,0"
                                           Source="{Binding PathImageUrl,
                                                            Converter={StaticResource PlaylistImageConverter}}"/>

                                    <StackPanel Grid.Column="1"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="{Binding SongName}"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Foreground="White"/>
                                        <TextBlock Text="{Binding UserName}"
                                                   FontSize="16"
                                                   Foreground="LightGray"
                                                   Margin="0,5,0,0"/>
                                    </StackPanel>

                                    <Button Grid.Column="2"
                                            Content="▶"
                                            Width="40"
                                            Height="40"
                                            Command="{Binding PlaySongCommand, ElementName=RootControl}"
                                            CommandParameter="{Binding}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            FontSize="24"
                                            Foreground="White"
                                            Cursor="Hand"
                                            VerticalAlignment="Center"/>

                                    <Button x:Name="DeleteButton"
                                            Grid.Column="3"
                                            Content="Eliminar"
                                            FontSize="16"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Foreground="LightGray"
                                            Click="OnDeleteButtonClick"
                                            Cursor="Hand"
                                            VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <Popup x:Name="DeleteSongPopup"
                   IsOpen="{Binding IsDeletePopupVisible}"
                   Placement="Bottom"
                   AllowsTransparency="True"
                   PopupAnimation="Fade"
                   StaysOpen="False"
                   Closed="OnDeletePopupClosed">
                <Border Background="#282828"
                        CornerRadius="12"
                        Padding="20"
                        Width="240"
                        Height="120">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="¿Eliminar esta canción?"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"
                                   HorizontalAlignment="Center"/>
                        <Button Content="Eliminar canción"
                                Width="160"
                                Height="32"
                                Background="#D32F2F"
                                Foreground="White"
                                FontSize="14"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Command="{Binding DeleteSongCommand}"
                                CommandParameter="{Binding SelectedSong}"
                                HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Popup>

        </Canvas>
    </Viewbox>
</UserControl>
