<UserControl x:Class="SoundNest_Windows_Client.Views.PlaylistDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundyColor1}"
             xmlns:local="clr-namespace:SoundNest_Windows_Client.Views"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" 
             d:DesignWidth="800">

    <Viewbox Stretch="Uniform">
        <Canvas Width="1920" 
                Height="1080">
            <TextBlock FontSize="66"
                       FontWeight="Bold"
                       Foreground="{StaticResource ForegroundWhiteColor}"
                       Canvas.Left="432" 
                       Canvas.Top="117">
                <Run Text="Playlist -> "/>
                <Run Text="{Binding PlaylistName}"/>
            </TextBlock>

            <ScrollViewer Height="615"
                          Width="1427"
                          Canvas.Left="349" 
                          Canvas.Top="263"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">

                <ItemsControl ItemsSource="{Binding Songs}"
                              Width="1427">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="10"
                                    Padding="10"
                                    Background="#222"
                                    CornerRadius="8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition 
                                            Height="Auto"/>
                                        <RowDefinition 
                                            Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition 
                                            Width="*"/>
                                        <ColumnDefinition 
                                            Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Title}"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               Grid.Row="0"
                                               Grid.Column="0"/>

                                    <TextBlock Text="{Binding Artist}"
                                               FontSize="16"
                                               Foreground="LightGray"
                                               Grid.Row="1"
                                               Grid.Column="0"
                                               Margin="0,5,0,0"/>

                                    <Button Content="▶"
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Grid.RowSpan="2"
                                            Width="40" Height="40"
                                            Command="{Binding DataContext.PlaySongCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            FontSize="24"
                                            Foreground="White"
                                            Cursor="Hand"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Canvas>
    </Viewbox>
</UserControl>
