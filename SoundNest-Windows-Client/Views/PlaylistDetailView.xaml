<UserControl x:Class="SoundNest_Windows_Client.Views.PlaylistDetailView"
             x:Name="RootControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:SoundNest_Windows_Client.Resources.Converters"
             mc:Ignorable="d"
             Background="{StaticResource BackgroundyColor1}"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <UserControl.Resources>
        <conv:PlaylistImageConverter x:Key="PlaylistImageConverter" />
        <Style x:Key="SongItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#222222"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                        To="#333333" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                        To="#222222" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="CircularButtonStyle" TargetType="Button">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TransformGroup>
                        <ScaleTransform x:Name="ButtonScale"/>
                        <TranslateTransform x:Name="ButtonTranslate"/>
                    </TransformGroup>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="45"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      />
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.Y)"
                                                     To="-5" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.Y)"
                                                     To="0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                                 To="0.9" Duration="0:0:0.1" AutoReverse="True"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                                 To="0.9" Duration="0:0:0.1" AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </UserControl.Resources>

    <Viewbox Stretch="Uniform">
        <Canvas Width="1920" Height="1080">
            <Label Content="Reproducir Playlist"
        FontSize="45" FontWeight="Bold"
        Foreground="{StaticResource ForegroundWhiteColor}"
        Canvas.Left="444" Canvas.Top="241" HorizontalAlignment="Left" VerticalAlignment="Top" Width="734" Height="64"/>
            <Button Width="90"
        Height="90"
        Canvas.Left="349"
        Canvas.Top="230"
        FontFamily="Segoe MDL2 Assets"
        FontSize="40"
        Content="&#xF5B0;"
        Command="{Binding PlayPlaylistCommand}"
        Background="#FFA500"
        BorderThickness="0"
        Foreground="Black"
        Cursor="Hand"
        ToolTip="Reproducir playlist"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Padding="0"
        BorderBrush="Transparent"
        Style="{StaticResource CircularButtonStyle}"/>


            <TextBlock FontSize="66"
                       FontWeight="Bold"
                       Foreground="{StaticResource ForegroundWhiteColor}"
                       Canvas.Left="441"
                       Canvas.Top="62">
                <Run Text="Playlist -> "/>
                <Run Text="{Binding PlaylistName}"/>
            </TextBlock>

            <Button Content="Editar playlist"
                    FontSize="20"
                    FontWeight="Bold"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Command="{Binding EditPlaylistCommand}"
                    Canvas.Left="1332"
                    Canvas.Top="228"
                    Width="261"
                    Height="78"/>

            <Button Content="Eliminar playlist"
                    FontSize="20"
                    FontWeight="Bold"
                    Style="{StaticResource NegativeButtonStyle}"
                    Command="{Binding DeletePlaylistCommand}"
                    Canvas.Left="1621"
                    Canvas.Top="230"
                    Width="243"
                    Height="76"/>

            <ScrollViewer Height="520"
                          Width="1427"
                          Canvas.Left="349"
                          Canvas.Top="358"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled" HorizontalAlignment="Center" VerticalAlignment="Top">
                <ItemsControl ItemsSource="{Binding Songs}" Width="1427">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Height="70"
                Style="{StaticResource SongItemStyle}"
                Margin="0,0,0,10">
                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="IndexText" Storyboard.TargetProperty="Visibility">
                                                    <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Collapsed}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PlayButton" Storyboard.TargetProperty="Visibility">
                                                    <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}" />
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="IndexText" Storyboard.TargetProperty="Visibility">
                                                    <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PlayButton" Storyboard.TargetProperty="Visibility">
                                                    <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Collapsed}" />
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>

                                <Grid Margin="10,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock x:Name="IndexText"
               Text="{Binding Index}"
               Foreground="White"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Visibility="Visible"/>

                                    <Button x:Name="PlayButton"
            Grid.Column="0"
            Visibility="Collapsed"
            Width="24" Height="24"
            Background="Transparent"
            BorderThickness="0"
            Foreground="White"
            FontFamily="Segoe MDL2 Assets"
            FontSize="16"
            Content="&#xE768;"
            Command="{Binding DataContext.PlaySongCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
            CommandParameter="{Binding}" />

                                    <Image Grid.Column="1"
           Width="50"
           Height="50"
           Stretch="UniformToFill"
           Margin="10,0"
           Source="{Binding PathImageUrl, Converter={StaticResource PlaylistImageConverter}}"/>

                                    <StackPanel Grid.Column="2"
                Orientation="Vertical"
                VerticalAlignment="Center"
                Margin="10,0">
                                        <TextBlock Text="{Binding SongName}"
                   FontWeight="Bold"
                   FontSize="14"
                   Foreground="White"/>
                                        <TextBlock Text="{Binding UserName, TargetNullValue='Artista desconocido'}"
                   FontSize="12"
                   Foreground="Gray"/>
                                    </StackPanel>

                                    <Button Grid.Column="3"
            Content="Eliminar"
            Background="Transparent"
            Foreground="LightGray"
            BorderThickness="0"
            FontSize="14"
            Click="OnDeleteButtonClick"
            Cursor="Hand"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Margin="10,0,0,0"/>

                                    <TextBlock Grid.Column="4"
            Text="{Binding DurationFormatted}"
            Foreground="White"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
            Margin="0,0,10,0"/>
                                </Grid>

                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                </ItemsControl>
            </ScrollViewer>

            <Popup x:Name="DeleteSongPopup"
                   IsOpen="{Binding IsDeletePopupVisible}"
                   Placement="Bottom"
                   AllowsTransparency="True"
                   PopupAnimation="Fade"
                   StaysOpen="False"
                   Closed="OnDeletePopupClosed">
                <Border Background="#282828"
                        CornerRadius="12"
                        Padding="20"
                        Width="240"
                        Height="120">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="¿Eliminar esta canción?"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"
                                   HorizontalAlignment="Center"/>
                        <Button Content="Eliminar canción"
                                Width="160"
                                Height="32"
                                Background="#D32F2F"
                                Foreground="White"
                                FontSize="14"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Command="{Binding DeleteSongCommand}"
                                CommandParameter="{Binding SelectedSong}"
                                HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Popup>

        </Canvas>
    </Viewbox>
</UserControl>
