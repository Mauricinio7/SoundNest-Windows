<Window x:Class="SoundNest_Windows_Client.Views.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        Width="600" Height="350"
        Topmost="True">

    <Border CornerRadius="20" Background="#1E1E1E" Padding="0" BorderBrush="{StaticResource SecondaryColor2}" BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DockPanel Background="#2C2C2C" MouseDown="TitleBar_MouseDown">
                <TextBlock Text="Notificación" 
                           Foreground="White" 
                           VerticalAlignment="Center" 
                           FontWeight="Bold"
                           Margin="10,0,0,0"/>
                <Button Content="✕"
                        Width="30" Height="30"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,5,10,5"
                        Background="Transparent"
                        Foreground="White"
                        BorderBrush="Transparent"
                        Click="CloseButton_Click"/>
            </DockPanel>

            <TextBlock Text="{Binding Title}" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Grid.Row="1"
                       Margin="0,10,0,10"/>

            <TextBlock Text="{Binding Sender}" 
                       FontSize="18" 
                       Foreground="LightGray" 
                       HorizontalAlignment="Center"
                       Grid.Row="2"
                       Margin="0,0,0,10"/>

            <TextBlock Text="{Binding Message}"
                       FontSize="20"
                       Foreground="White"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Grid.Row="3"
                       Margin="10"/>
        </Grid>
    </Border>
</Window>