<UserControl x:Class="SoundNest_Windows_Client.Views.CommentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <!-- Área de mensajes -->
            <RowDefinition/>
            <!-- Barra de entrada -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Scroll de burbujas de chat -->
        <ScrollViewer Grid.Row="0" Margin="10" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Messages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#252526"
                                CornerRadius="10"
                                Padding="10"
                                Margin="0,5">
                            <StackPanel>
                                <!-- Remitente -->
                                <TextBlock Text="{Binding Sender}"
                                           FontWeight="Bold"
                                           Foreground="#007ACC"
                                           FontSize="12"/>
                                <!-- Texto del mensaje -->
                                <TextBlock Text="{Binding Text}"
                                           Foreground="White"
                                           TextWrapping="Wrap"
                                           FontSize="14"
                                           Margin="0,2,0,2"/>
                                <!-- Hora -->
                                <TextBlock Text="{Binding Timestamp, StringFormat=HH:mm}"
                                           Foreground="LightGray"
                                           FontSize="10"
                                           HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Barra de entrada -->
        <Border Grid.Row="1"
                Background="#252526"
                Padding="8"
                Margin="10"
                CornerRadius="5">
            <DockPanel>
                <!-- Cuadro de texto -->
                <TextBox Text="{Binding NewMessage, UpdateSourceTrigger=PropertyChanged}"
                         Background="#1E1E1E"
                         Foreground="White"
                         BorderThickness="0"
                         FontSize="14"
                         VerticalContentAlignment="Center"
                         DockPanel.Dock="Left"
                         Margin="0,0,5,0"/>

                <!-- Botón enviar -->
                <Button Content="▶"
                        Command="{Binding SendCommand}"
                        Background="#007ACC"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        Padding="10,5"
                        BorderThickness="0"
                        Width="50"/>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
