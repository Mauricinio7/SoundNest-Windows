<UserControl x:Class="SoundNest_Windows_Client.Views.CreatePlaylistView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SoundNest_Windows_Client.Views"
             xmlns:controls="clr-namespace:SoundNest_Windows_Client.Resources.Controls"
             mc:Ignorable="d" 
             Background="{StaticResource BackgroundyColor1}"
             d:DesignHeight="450" d:DesignWidth="800">

    <Viewbox Stretch="Uniform">
        <Canvas Width="1920" Height="1080">

            <Label Content="Nombre de la plalist:"
               FontSize="35" FontWeight="Bold"
               Foreground="{StaticResource ForegroundWhiteColor}"
               Canvas.Left="409" Canvas.Top="121"/>

            <controls:PlaceholderTextBoxControl
            Text="{Binding PlaylistName, UpdateSourceTrigger=PropertyChanged}"
            PlaceholderText=""
            PaddingValue="30,5,0,0"
            Style="{StaticResource PrimarySimpleTextBoxStyle}"
            FontSizeValue="35"
            BackgroundColorValue="{StaticResource BackgroundyColor2}"
            Canvas.Left="386" Canvas.Top="191" Height="110" Width="928" />

            <Label Content="Descripción:"
               FontSize="35" FontWeight="Bold"
               Foreground="{StaticResource ForegroundWhiteColor}"
               Canvas.Left="409" Canvas.Top="370"/>

            <TextBox Text="{Binding AdditionalInfo, UpdateSourceTrigger=PropertyChanged}"
                 Background="{StaticResource BackgroundyColor2}"
                 Foreground="White"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 FontSize="25"
                 Padding="10"
                 BorderBrush="Transparent"
                 Width="908" Height="134"
                 Canvas.Left="396" Canvas.Top="450" HorizontalAlignment="Center" VerticalAlignment="Top"/>

            <Button Content="Subir imagen"
                FontSize="30"
                FontWeight="Bold"
                Style="{StaticResource PrimaryButtonStyle}"
                Command="{Binding UploadPhotoCommand}"
                Canvas.Left="946" Canvas.Top="700"
                Width="358" Height="110"/>

            <Image Source="{Binding PreviewImage}" 
            Height="235"
            VerticalAlignment="Top" 
            Stretch="UniformToFill" Canvas.Left="510" Canvas.Top="637" Width="292" />

            <Button Content="Crear plalist"
                FontSize="35"
                FontWeight="Bold"
                Style="{StaticResource PositiveButtonStyle}"
                Command="{Binding CreatePlaylistCommand}"
                Canvas.Left="1467" Canvas.Top="191"
                Width="358" Height="110" HorizontalAlignment="Center" VerticalAlignment="Top"/>

            <Button Content="Cancelar"
                FontSize="35"
                FontWeight="Bold"
                Style="{StaticResource NegativeButtonStyle}"
                Command="{Binding CancelCommand}"
                Canvas.Left="1467" Canvas.Top="450"
                Width="358" Height="110"/>

        </Canvas>
    </Viewbox>
</UserControl>
